<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cardview_ejercicios"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_ejercicio"
        android:layout_width="340dp"
        android:layout_height="150dp"
        app:cardCornerRadius="40dp"
        app:cardBackgroundColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="2:1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/cardview_ejercicios">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imagenEjercicio"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/image_view_rounded"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundedCornerImageView">
            </com.google.android.material.imageview.ShapeableImageView>

            <CheckBox
                android:id="@+id/checkboxEjercicios"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="2"
                android:text="@string/CURLBARRA"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:button="@null"
                android:drawableRight="@drawable/checkbox"
                android:layout_marginStart="20dp"
                android:theme="@style/checkboxColoreado"
                android:fontFamily="@font/lato_bold"
                android:layoutDirection="rtl"
                android:paddingEnd="20dp"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>