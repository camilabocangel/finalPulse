<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fondo"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_predeterminados"
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:cardCornerRadius="40dp"
        android:backgroundTint="@color/fondo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="2:1">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cuadroVerdePredeterminados"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/gradient5">
            <TextView
                android:id="@+id/musculosPredeterminados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/MUSCULOS"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="@id/cuadroVerdePredeterminados"
                app:layout_constraintStart_toStartOf="@id/cuadroVerdePredeterminados"
                app:layout_constraintEnd_toEndOf="@id/cuadroVerdePredeterminados"
                android:layout_marginTop="10dp">
            </TextView>

            <TextView
                android:id="@+id/ejercicioPredeterminadosRecycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/EJERCICIOHISTORIAL"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/musculosPredeterminados"
                app:layout_constraintStart_toStartOf="@id/cuadroVerdePredeterminados"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="10dp">
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>