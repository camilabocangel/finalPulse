<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityPantallaInicio">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">
        <TextView
            android:id="@+id/comienzaPantallaInicio"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/COMIENZAPANTALLAINICIO"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:fontFamily="@font/lato_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp">
        </TextView>
        <HorizontalScrollView
            android:id="@+id/horizontalScrollPantallaInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/comienzaPantallaInicio"
            android:layout_marginTop="30dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/bannerSinTiempo"
                    android:layout_width="340dp"
                    android:layout_height="190dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/contraintCardviewSinTiempo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient1">

                        <TextView
                            android:id="@+id/sintiempo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/SINTIEMPO"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato_bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="10dp"/>
                        <TextView
                            android:id="@+id/rutinaPredetTexto"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:text="@string/RUTINAPREDETERMINADA"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato_regular"
                            app:layout_constraintTop_toBottomOf="@id/sintiempo"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp">
                        </TextView>
                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="175dp"
                            android:src="@drawable/chica_pesa"
                            app:layout_constraintStart_toEndOf="@id/rutinaPredetTexto"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="40dp">
                        </ImageView>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/bannerPersonalizaRutina"
                    android:layout_width="340dp"
                    android:layout_height="190dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:layout_constraintTop_toTopOf="@id/bannerSinTiempo"
                    app:layout_constraintStart_toEndOf="@id/bannerSinTiempo"
                    android:layout_marginStart="5dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient2">

                        <TextView
                            android:id="@+id/muchaEnergia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/MUCHAENERGIA"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato_bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="10dp"/>
                        <TextView
                            android:id="@+id/rutinaPersonalTexto"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:text="@string/CREATUSPROPIASRUTINAS"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato_regular"
                            app:layout_constraintTop_toBottomOf="@id/muchaEnergia"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp">
                        </TextView>
                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/chico_pesa"
                            app:layout_constraintStart_toEndOf="@id/rutinaPersonalTexto"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="30dp">
                        </ImageView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/bannerGaleria"
                    android:layout_width="340dp"
                    android:layout_height="190dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:layout_constraintTop_toTopOf="@id/bannerSinTiempo"
                    app:layout_constraintStart_toEndOf="@id/bannerPersonalizaRutina"
                    android:layout_marginStart="5dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient4">
                        <TextView
                            android:id="@+id/galeriaBannerTexto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/GALERIABANNER"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato_bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="10dp"/>
                        <TextView
                            android:id="@+id/galeriaTexto"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:text="@string/MIDETUPROGRESO"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato_regular"
                            app:layout_constraintTop_toBottomOf="@id/galeriaBannerTexto"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp">
                        </TextView>
                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/mujer_sentadilla_png"
                            app:layout_constraintStart_toEndOf="@id/galeriaTexto"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="30dp">
                        </ImageView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/bannerVideos"
                    android:layout_width="340dp"
                    android:layout_height="190dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:layout_constraintTop_toTopOf="@id/bannerSinTiempo"
                    app:layout_constraintStart_toEndOf="@id/bannerGaleria"
                    android:layout_marginStart="5dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="340dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient6">
                        <TextView
                            android:id="@+id/necesitasMotivacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/NECESITASMOTIVACION"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato_bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="10dp"/>
                        <ImageView
                            android:id="@+id/brazo_tiktok"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:src="@drawable/brazo"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@id/motivacionTexto"
                            android:layout_marginTop="10dp">
                        </ImageView>
                        <TextView
                            android:id="@+id/motivacionTexto"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="@string/VIDEOSMOTIVACIONALES"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato_regular"
                            app:layout_constraintStart_toStartOf="@id/necesitasMotivacion"
                            app:layout_constraintTop_toBottomOf="@id/necesitasMotivacion"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp">
                        </TextView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>
        <androidx.cardview.widget.CardView
            android:id="@+id/datosCuriososCardview"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalScrollPantallaInicio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/gradient3">
                <TextView
                    android:id="@+id/datoCurioso"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="@string/DATOCURISO"
                    android:textSize="15sp"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp">
                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/datosCuriososCardview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewRutinaPredeterminada"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:cardCornerRadius="20dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient4">
                        <ImageView
                            android:id="@+id/iconoRutinaPredeterminada"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/pesita_blanca"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="10dp">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/PREDETERMINADASICONO"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iconoRutinaPredeterminada"
                            android:layout_marginTop="10dp">
                        </TextView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewPersonalizaRutina"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintTop_toTopOf="@id/cardviewRutinaPredeterminada"
                    app:layout_constraintStart_toEndOf="@id/cardviewRutinaPredeterminada"
                    android:layout_marginStart="20dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient4">
                        <ImageView
                            android:id="@+id/iconoRutinaPersonalizada"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/icono_personalizada"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="10dp">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/PERSONALIZAICONO"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iconoRutinaPersonalizada"
                            android:layout_marginTop="10dp">
                        </TextView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewGaleriaPantallaInicial"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintTop_toTopOf="@id/cardviewRutinaPredeterminada"
                    app:layout_constraintStart_toEndOf="@id/cardviewPersonalizaRutina"
                    android:layout_marginStart="20dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient4">
                        <ImageView
                            android:id="@+id/iconoGaleriaPantallaInicio"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/ic_galeria"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="10dp">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/GALERIAPANTALLAINICIO"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iconoGaleriaPantallaInicio"
                            android:layout_marginTop="10dp">
                        </TextView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewPerfilPantallaInicial"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintTop_toTopOf="@id/cardviewRutinaPredeterminada"
                    app:layout_constraintStart_toEndOf="@id/cardviewGaleriaPantallaInicial"
                    android:layout_marginStart="20dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient4">
                        <ImageView
                            android:id="@+id/iconoPerfilPantallaInicio"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/perfil"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="10dp">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/PERFILPANTALLAINICIO"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iconoPerfilPantallaInicio"
                            android:layout_marginTop="10dp">
                        </TextView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewHistorialPantallaInicio"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintTop_toTopOf="@id/cardviewRutinaPredeterminada"
                    app:layout_constraintStart_toEndOf="@id/cardviewPerfilPantallaInicial"
                    android:layout_marginStart="20dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient4">
                        <ImageView
                            android:id="@+id/iconoHistorialPantallaInicio"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/icono_historial"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="10dp">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/HISTORIAL"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iconoHistorialPantallaInicio"
                            android:layout_marginTop="10dp">
                        </TextView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewVideoPantallaInicio"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintTop_toTopOf="@id/cardviewRutinaPredeterminada"
                    app:layout_constraintStart_toEndOf="@id/cardviewHistorialPantallaInicio"
                    android:layout_marginStart="20dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient4">
                        <ImageView
                            android:id="@+id/iconoVideoPantallaInicio"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/video_icon"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="10dp">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/VIDEOICONO"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iconoVideoPantallaInicio"
                            android:layout_marginTop="10dp">
                        </TextView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>